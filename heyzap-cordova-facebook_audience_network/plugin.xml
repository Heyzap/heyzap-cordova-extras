<?xml version='1.0' encoding='utf-8'?>
<plugin id="heyzap-cordova-facebook_audience_network" version="1.0.2" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">

  <name>Heyzap Cordova Facebook Audience Network</name>
  <description>Facebook Audience Network Cordova plugin for the Heyzap Cordova Plugin</description>
  <author>Heyzap Inc.</author>
  <license>Heyzap</license>
  <keywords>cordova,heyzap,phonegap,sdk,ad,mobile,mediation,facebook_audience_network</keywords>

  <engines>
    <engine name="cordova-android" version=">=4.0.0" />
    <engine name="cordova-ios" version=">=3.8.0" />
  </engines>

  <!-- iOS -->
  <platform name="ios">

    <!-- iOS 9 requires apps to use HTTPS; some networks require you to disable App Transport Security to workaround this. -->
    <config-file target="*-Info.plist" parent="NSAppTransportSecurity">
      <dict>
        <key>NSAllowsArbitraryLoads</key>
        <true/>
      </dict>
    </config-file>

    <!-- Hooks -->
    <hook type="before_plugin_install" src="hooks/before_plugin_install/000_create_symlinks.js" />
    <!-- / Hooks -->

    <!-- Facebook Audience Network SDK -->
    <framework src="src/ios/Fyber_FacebookAudienceNetwork_4.10.1-r4.framework" custom="true" compiler-flags="-fmodules" />
    <!-- / Facebook Audience Network SDK -->

    <!-- External Frameworks -->
    <framework src="AdSupport.framework" />
    <framework src="AVFoundation.framework" />
    <framework src="CoreGraphics.framework" />
    <framework src="CoreImage.framework" />
    <framework src="CoreMedia.framework" />
    <framework src="CoreMotion.framework" />
    <framework src="Foundation.framework" />
    <framework src="MediaPlayer.framework" />
    <framework src="OpenGLES.framework" />
    <framework src="Security.framework" />
    <framework src="StoreKit.framework" />
    <framework src="SystemConfiguration.framework" />
    <framework src="UIKit.framework" />
    <!-- / External Frameworks -->

  </platform>
  <!-- / iOS -->

  <!-- Android -->
  <platform name="android">
    <framework src="src/android/facebook-audience-network.gradle" custom="true" type="gradleReference" />

    <!-- Facebook SDK -->
    <source-file src="src/android/facebookaudiencenetwork-4.10.0.aar" target-dir="libs" />
    <source-file src="src/android/fyber-facebook-4.10.0-r4.aar" target-dir="libs" />
      <!-- / Facebook SDK -->
  </platform>
  <!-- / Android -->

</plugin>
